<h1>New Product</h1>
<%= render 'form' %>
<%= link_to "Back", root_path %>
<hr>
<h3>Filter</h3>
<%= form_for :image, url: filter_path, method: :post do |f| %> 
 <p>
    <%= f.label :product %><br>
    <%= f.collection_select :product_id, Product.order(:name),:id,:name, include_blank: true %>  
 </p>
 
  <p>
    <%= f.submit "Filter" %>
  </p>
<% end %>